<div class="article">
	<h1><%= @article.title %></h1>

	<p id="article-body"><%= @article.body %></p>

	<button><%= link_to "Edit", edit_article_path(@article) %></button>
	<button><%= link_to "Delete", article_path(@article), 
			method: :delete,
        	data: { confirm: "Are you sure?" } %></button>
</div>

<br>

<h2>Comments</h2>
<%= render @article.comments %>

<p style="font-weight: bold;">Add a comment:</p>
<%= render 'comments/form' %>



